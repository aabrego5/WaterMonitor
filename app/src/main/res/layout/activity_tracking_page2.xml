<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TrackingPage2">

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TableRow>

                <Button
                    android:id="@+id/option1"
                    android:text="Option2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    />
                <Button
                    android:id="@+id/option2"
                    android:text="Option3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    />
                <Button
                    android:id="@+id/option3"
                    android:text="Option4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    />
                <Button
                    android:id="@+id/home"
                    android:text="Home"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    />

            </TableRow>
            <TableRow>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="226dp"
                    android:layout_height="35dp"
                    android:fontFamily="@font/cardo_bold"
                    android:gravity="center"
                    android:text="Option1"
                    android:textColor="#2196F3"
                    android:textSize="28sp"
                    android:textStyle="normal|bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.064" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/titleToday"
                    android:layout_width="226dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text="Today"
                    android:fontFamily="@font/cardo_bold"
                    android:textColor="#2196F3"
                    android:textSize="20sp"
                    android:textStyle="normal|bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.064" />
            </TableRow>

            <TableRow>

                <lecho.lib.hellocharts.view.LineChartView
                    android:id="@+id/chartToday"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="116dp"
                    android:fontFamily="@font/cardo_bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/titleThisWeek"
                    android:layout_width="226dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text="This Week"
                    android:textColor="#2196F3"
                    android:fontFamily="@font/cardo_bold"
                    android:textSize="20sp"
                    android:textStyle="normal|bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.064" />
            </TableRow>

            <TableRow>

                <lecho.lib.hellocharts.view.LineChartView
                    android:id="@+id/chartThisWeek"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="116dp"
                    android:fontFamily="@font/cardo_bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.646" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/titleThisMonth"
                    android:layout_width="226dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text="This Month"
                    android:textColor="#2196F3"
                    android:fontFamily="@font/cardo_bold"
                    android:textSize="20sp"
                    android:textStyle="normal|bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.064" />
            </TableRow>

            <TableRow>

                <lecho.lib.hellocharts.view.LineChartView
                    android:id="@+id/chartThisMonth"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="116dp"
                    android:fontFamily="@font/cardo_bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.646" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/titleThisYear"
                    android:layout_width="226dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text="This Year"
                    android:textColor="#2196F3"
                    android:fontFamily="@font/cardo_bold"
                    android:textSize="20sp"
                    android:textStyle="normal|bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.064" />
            </TableRow>

            <TableRow>

                <lecho.lib.hellocharts.view.LineChartView
                    android:id="@+id/chartThisYear"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="116dp"
                    android:fontFamily="@font/cardo_bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.646" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/titleYears"
                    android:layout_width="226dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text="All Years"
                    android:textColor="#2196F3"
                    android:fontFamily="@font/cardo_bold"
                    android:textSize="20sp"
                    android:textStyle="normal|bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.064" />
            </TableRow>

            <TableRow>

                <lecho.lib.hellocharts.view.LineChartView
                    android:id="@+id/chartYears"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:fontFamily="@font/cardo_bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.646" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="24dp"
                    android:textColor="#2196F3"
                    android:textSize="20sp"
                    android:textStyle="normal|bold" />
            </TableRow>

            <TableRow>

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="360"
                    android:paddingBottom="50dp"
                    android:progress="90" />


            </TableRow>

            <!--        <TableRow>-->

            <!--            <com.triggertrap.seekarc.SeekArc-->
            <!--                android:id="@+id/seekArc2"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_gravity="center"-->
            <!--                android:padding="30dp" />-->
            <!--        </TableRow>-->


        </TableLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>